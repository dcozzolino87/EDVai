from datetime import timedelta
from airflow import DAG
from airflow.operators.bash import BashOperator
from airflow.operators.trigger_dagrun import TriggerDagRunOperator
from airflow.operators.dummy import DummyOperator
from airflow.utils.dates import days_ago

default_args = {
    'owner': 'airflow'
}

with DAG(
    dag_id='ETL_dag_padre',
    default_args=default_args,
    schedule_interval="@daily",
    start_date=days_ago(2),
    dagrun_timeout=timedelta(minutes=60),
    catchup=False,
    tags=['ingest']
) as dag:

    comienzo = DummyOperator(
        task_id='Comienzo'
    )

    ingest = BashOperator(
        task_id='ingest',
        bash_command='ssh hadoop@172.17.0.2 /usr/bin/sh /home/hadoop/scripts/ingest_car_rental.sh ',
    )

    ejecucion_dag_hijo = TriggerDagRunOperator(
        task_id='ejecucion_dag_hijo',
        trigger_dag_id='dag_hijo'
        execution_date = "{{ ds }}",
        reset_dag_run = True,
        poke_interval = 30,
        dag=dag
    )

    fin = DummyOperator(
        task_id='fin',
    )

    comienzo >> ingest >> ejecucion_dag_hijo >> fin

if __name__ == "__main__":
    dag.cli()
